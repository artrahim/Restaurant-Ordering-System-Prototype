<Page x:Class="OrderingSystem.Starters"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:OrderingSystem"
      mc:Ignorable="d" 
      d:DesignHeight="1280" d:DesignWidth="1800"
      Title="Menu" >

    <Grid>
        <Frame Name="menu_Page"/>
        <TabControl HorizontalAlignment="Left" Height="1160" Margin="0,0,0,0" VerticalAlignment="Top" Width="1320" FontWeight="Bold" FontFamily="Euphemia" FontSize="32">
            <TabItem Header="STARTERS" Width="260" Height="80">
                <Grid Background="White" Grid.IsSharedSizeScope="True" Height="1080" Width="1320">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition SharedSizeGroup="A" Height="360"/>
                        <RowDefinition SharedSizeGroup="A" Height="360"/>
                        <RowDefinition SharedSizeGroup="A" Height="360"/>
                    </Grid.RowDefinitions>
                    <StackPanel Grid.Column="0" Grid.Row="0">
                        <local:MenuItem Width="Auto" Height="Auto" Margin="10,10,10,30" foodImage="img/chickenwings.jpg" itemDescription="Fried until golden and crispy." itemName="Fried Wings" price="$12.99" AddToOrderButtonClicked="MenuItem_ChickenWings" />
                    </StackPanel>
                    <StackPanel Grid.Column="0" Grid.Row="1">
                        <local:MenuItem Width="Auto" Margin="10,10,10,30" foodImage="img/garlicbread.png" itemName="Garlic Toast" itemDescription="Fresh from the oven, brushed with butter and garlic."  price="$1.80" Height="300"/>
                    </StackPanel>
                    <StackPanel Grid.Column="0" Grid.Row="2">
                        <local:MenuItem Width="Auto" Height="Auto" Margin="10,10,10,30" foodImage="img/soup.png" itemDescription="Baked with a toasted crouton and topped with pizza mozzarella, cheddar and feta. Finished with freshly grated Parmesan." itemName="Baked French Onion Soup" price="$6.99"/>
                    </StackPanel>

                    <StackPanel Grid.Column="1" Grid.Row="0">
                        <local:MenuItem Width="Auto" Margin="10,30,10,30" foodImage="img/soup.png"/>
                    </StackPanel>
                    <StackPanel Grid.Column="1" Grid.Row="1">
                        <local:MenuItem Width="Auto" Height="Auto" Margin="10,0,10,30"/>
                    </StackPanel>
                    <StackPanel Grid.Column="1" Grid.Row="2">
                        <local:MenuItem Width="Auto" Margin="10,0,10,30"/>
                    </StackPanel>

                    <Popup x:Name="PopUpAddToOrder_ChickenWings" Width="500" Height="500" Margin="0,0,0,0" IsOpen="{Binding ElementName=PopUpAddToOrder_ChickenWings, Path=IsChecked, Mode=TwoWay}" Placement="Center" StaysOpen="True" IsHitTestVisible="False" AllowsTransparency="True">
                        <Canvas Height="500" Background="LightGray" VerticalAlignment="Bottom" Margin="10,0,0,0" Width="500">
                            <Canvas.RenderTransform>
                                <RotateTransform x:Name="Transform" />
                            </Canvas.RenderTransform>
                            <ScrollViewer Canvas.Top="0" Width="496" Height="420">
                                <StackPanel HorizontalAlignment="Left" VerticalAlignment="Top" Width="500">
                                    <Expander x:Name="expander_1" Header="Size">
                                        <Menu>
                                            <Viewbox Height="40" HorizontalAlignment="Left">
                                                <RadioButton x:Name="single_1" FontSize="20" GroupName="Size" Content="Starter Size + $12.99 "></RadioButton>
                                            </Viewbox>
                                            <Viewbox Height="40" HorizontalAlignment="Left">
                                                <RadioButton x:Name="double_1" FontSize="20" GroupName="Size" Content="Double Order + $23.00 "></RadioButton>
                                            </Viewbox>
                                        </Menu>
                                    </Expander>
                                    <Expander x:Name="expander_2" Header="Select Flavor Of Wings">
                                        <Menu >
                                            <Viewbox Height="40" HorizontalAlignment="Left">
                                                <RadioButton x:Name="naked" FontSize="20" GroupName="Flavor" Content="Plain                                  "></RadioButton>
                                            </Viewbox>
                                            <Viewbox Height="40" HorizontalAlignment="Left">
                                                <RadioButton x:Name="mild" FontSize="20" GroupName="Flavor" Content="Mild                                    "></RadioButton>
                                            </Viewbox>
                                            <Viewbox Height="40" HorizontalAlignment="Left">
                                                <RadioButton x:Name="medium" FontSize="20" GroupName="Flavor" Content="Medium             "></RadioButton>
                                            </Viewbox>
                                            <Viewbox Height="40" HorizontalAlignment="Left">
                                                <RadioButton x:Name="hot" FontSize="20" GroupName="Flavor" Content="Hot                                    "></RadioButton>
                                            </Viewbox>
                                            <Viewbox Height="40" HorizontalAlignment="Left">
                                                <RadioButton x:Name="bbq" FontSize="20" GroupName="Flavor" Content="BBQ                                  "></RadioButton>
                                            </Viewbox>
                                            <Viewbox Height="40" HorizontalAlignment="Left">
                                                <RadioButton x:Name="thai" FontSize="20" GroupName="Flavor" Content="Thai Chili                "></RadioButton>
                                            </Viewbox>
                                            <Viewbox Height="40" HorizontalAlignment="Left">
                                                <RadioButton x:Name="honey" FontSize="20" GroupName="Flavor" Content="Honey Garlic         "></RadioButton>
                                            </Viewbox>
                                            <Viewbox Height="40" HorizontalAlignment="Left">
                                                <RadioButton x:Name="salt" FontSize="20" GroupName="Flavor">Salt And Pepper</RadioButton>
                                            </Viewbox>
                                            <Viewbox Height="40" HorizontalAlignment="Left">
                                                <RadioButton x:Name="memphis" FontSize="20" GroupName="Flavor">Memphis Hot Sauce</RadioButton>
                                            </Viewbox>
                                        </Menu>
                                    </Expander>
                                    <Expander x:Name="expander_3" Header="Select One Dip" Padding="0">
                                        <Menu>
                                            <Viewbox Height="40" HorizontalAlignment="Left">
                                                <RadioButton x:Name="blue" FontSize="20" GroupName="Dip" Content="Blue Cheese Dip"></RadioButton>
                                            </Viewbox>
                                            <Viewbox Height="40" HorizontalAlignment="Left">
                                                <RadioButton x:Name="chip" FontSize="20" GroupName="Dip" Content="Chipotle Caesar Dip     "></RadioButton>
                                            </Viewbox>
                                            <Viewbox Height="40" HorizontalAlignment="Left">
                                                <RadioButton x:Name="ranch" FontSize="20" GroupName="Dip" Content="Ranch Dip    "></RadioButton>
                                            </Viewbox>
                                            <Viewbox Height="40" HorizontalAlignment="Left">
                                                <RadioButton x:Name="cream" FontSize="20" GroupName="Dip" Content="Creamy Garlic Dip    "></RadioButton>
                                            </Viewbox>
                                            <Viewbox Height="40" HorizontalAlignment="Left">
                                                <RadioButton x:Name="cactus" FontSize="20" GroupName="Dip" Content="Cactus Dip"></RadioButton>
                                            </Viewbox>
                                        </Menu>
                                    </Expander>
                                </StackPanel>
                            </ScrollViewer>
                            <TextBox x:Name="quantityBox_1" IsReadOnly="True" Canvas.Left="60" Canvas.Top="439" Width="40" Height="40" Margin="1,0,0,0" Text="1" FontSize="27" HorizontalContentAlignment="Center"/>
                            <Button x:Name="minus_1" Content="-" Width="40" Height="40" Canvas.Top="439" Canvas.Left="10" Margin="1,0,0,0" HorizontalContentAlignment="Center" Padding="1,-3,1,1" Click="minus_1_Click"/>
                            <Button x:Name="add_1" Content="+" Width="40" Height="40" Canvas.Top="439" Canvas.Left="105" Margin="8,0,0,0" Click="add_1_Click" Padding="1,-4,1,1"/>
                            <Button x:Name="CancelButton_1" Content="Cancel" Canvas.Left="330" Canvas.Top="439" Height="40" Width="140" FontSize="25" Click="CancelButton_1_Click" Margin="2,0,0,0"/>
                            <Button Content="Add" Canvas.Left="165" Canvas.Top="439" Height="40" Width="140" FontSize="25" Margin="7,0,0,0" Click="Button_Click_1"/>

                        </Canvas>
                    </Popup>
                </Grid>
            </TabItem>
            <TabItem Header="PIZZA" Width="205">
                <Grid Background="White">
                </Grid>
            </TabItem>
            <TabItem Header="PASTA" Width="200">
                <Grid Background="White">
                </Grid>
            </TabItem>
            <TabItem Header="MAINS" Width="200">
                <Grid Background="White">
                </Grid>
            </TabItem>
            <TabItem Header="DESSERTS" Width="240">
                <Grid Background="White">
                </Grid>
            </TabItem>
            <TabItem Header="DRINKS" Width="210">
                <Grid Background="White">

                </Grid>
            </TabItem>
        </TabControl>
        <StackPanel x:Name="orderSummery" HorizontalAlignment="Right" Margin="0,0,0,0" VerticalAlignment="Top" Width="472" Orientation="Vertical" Background="#292929" Height="1280"/>
        <StackPanel HorizontalAlignment="Left" Height="120" Margin="0,0,0,0" VerticalAlignment="Bottom" Width="1320" Background="#292929" Orientation="Horizontal" >
            <Button x:Name ="callServer" Content="Call a Server" Margin="20,20,20,20" HorizontalAlignment="Left" VerticalAlignment="Center" Width="360" Height="80" Background="#e01a31" Foreground="WhiteSmoke" FontSize="36" FontFamily="Arial"/>
            <Label Content="Legend: " Foreground="WhiteSmoke" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="48" Margin="200,20,20,20" FontWeight="Bold" FontFamily="Euphemia"/>
            <Image Width="60" Height="60" Source="img/vegetarian.jpg"/>

        </StackPanel>
    </Grid>
</Page>
