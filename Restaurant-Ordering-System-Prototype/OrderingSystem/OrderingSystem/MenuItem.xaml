<UserControl x:Class="OrderingSystem.MenuItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:OrderingSystem"
             mc:Ignorable="d" 
             d:DesignHeight="210" d:DesignWidth="455" Height="Auto">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="42*"></ColumnDefinition>
            <ColumnDefinition Width="33*"></ColumnDefinition>
            <ColumnDefinition Width="16*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="210"></RowDefinition>
        </Grid.RowDefinitions>
        <Image x:Name="FoodImage" HorizontalAlignment="Left" Height="210" VerticalAlignment="Top" Width="210" Stretch="Fill"/>
        <StackPanel Grid.Column="1" Background="#FFE20000" Grid.ColumnSpan="2">
            <TextBlock x:Name="ItemName" TextWrapping="Wrap" Text="Item Name" Margin="5,5,106,0" FontWeight="Bold" FontSize="21" Foreground="White"/>
            <TextBlock x:Name="ItemDescription" Height="120" TextWrapping="Wrap" Text="Item Description" Margin="5,3,3,2" FontSize="14" Foreground="White"/>
        </StackPanel>

        <ToggleButton x:Name="AddToOrder" Content="Add to Order" Margin="24,155,24,12" Grid.ColumnSpan="2" Grid.Column="1" FontSize="18" Click="AddToOrder_Click"/>
        <StackPanel Grid.Column="2">
            <TextBlock x:Name="Price" TextWrapping="Wrap" Text="Price" Foreground="White" FontWeight="Bold" Margin="0,5,10,0" FontSize="22" TextAlignment="Right"/>
        </StackPanel>
    </Grid>
</UserControl>
