<Page x:Class="OrderingSystem.Starters"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:OrderingSystem"
      mc:Ignorable="d" 
      d:DesignHeight="1280" d:DesignWidth="1800"
      Title="Menu" >

    <Grid>
        <Frame Name="menu_Page"/>
        <TabControl HorizontalAlignment="Left" Height="1160" Margin="0,0,0,0" VerticalAlignment="Top" Width="1320" FontWeight="Bold" FontFamily="Euphemia" FontSize="32">
            <TabItem Header="STARTERS" Width="260" Height="80">
                <Grid x:Name="StarterFrame" Background="White">
                    <Border BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" Height="348" Margin="44,54,0,0" VerticalAlignment="Top" Width="793" Background="#e01a31"/>
                    <Image HorizontalAlignment="Left" Height="301" Margin="75,115,0,0" VerticalAlignment="Top" Width="300" Source="img/chickenwings.jpg"/>
                    <ToggleButton x:Name ="AddChickenWings_Popup" Content="Add To Order" VerticalAlignment="Bottom" Margin="426,0,528,741" HorizontalAlignment="Center" Width="360" Height="80" FontSize="36" FontFamily="Arial" Click="AddChickenWings_Click"/>
         
                <Grid Background="White" Grid.IsSharedSizeScope="True" Height="1080" Width="1320">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition SharedSizeGroup="A" Height="360"/>
                        <RowDefinition SharedSizeGroup="A" Height="360"/>
                        <RowDefinition SharedSizeGroup="A" Height="360"/>
                    </Grid.RowDefinitions>
                    <StackPanel Grid.Column="0" Grid.Row="0">
                        <local:MenuItem Width="Auto" Height="Auto" Margin="10,10,10,30" foodImage="img/chickenwings.jpg" itemDescription="Fried until golden and crispy." itemName="Fried Wings" price="$12.99" AddToOrderButtonClicked="MenuItem_ChickenWings" />
                    </StackPanel>
                    <StackPanel Grid.Column="0" Grid.Row="1">
                        <local:MenuItem Width="Auto" Margin="10,10,10,30" foodImage="img/garlicbread.png" itemName="Garlic Toast" itemDescription="Fresh from the oven, brushed with butter and garlic."  price="$1.80" Height="300"/>
                    </StackPanel>
                    <StackPanel Grid.Column="0" Grid.Row="2">
                        <local:MenuItem Width="Auto" Height="Auto" Margin="10,10,10,30" foodImage="img/soup.png" itemDescription="Baked with a toasted crouton and topped with pizza mozzarella, cheddar and feta. Finished with freshly grated Parmesan." itemName="Baked French Onion Soup" price="$6.99"/>
                    </StackPanel>

                    <StackPanel Grid.Column="1" Grid.Row="0">
                        <local:MenuItem Width="Auto" Margin="10,30,10,30" foodImage="img/soup.png"/>
                    </StackPanel>
                    <StackPanel Grid.Column="1" Grid.Row="1">
                        <local:MenuItem Width="Auto" Height="Auto" Margin="10,0,10,30"/>
                    </StackPanel>
                    <StackPanel Grid.Column="1" Grid.Row="2">
                        <local:MenuItem Width="Auto" Margin="10,0,10,30"/>
                    </StackPanel>

                </Grid>
            </TabItem>
            <TabItem Header="PIZZA" Width="205">
                <Grid Background="White">
                </Grid>
            </TabItem>
            <TabItem Header="PASTA" Width="200">
                <Grid Background="White">
                </Grid>
            </TabItem>
            <TabItem Header="MAINS" Width="200">
                <Grid Background="White">
                </Grid>
            </TabItem>
            <TabItem Header="DESSERTS" Width="240">
                <Grid Background="White">
                </Grid>
            </TabItem>
            <TabItem Header="DRINKS" Width="210">
                <Grid Background="White">

                </Grid>
            </TabItem>
        </TabControl>
        <StackPanel x:Name="orderSummery" HorizontalAlignment="Right" Margin="0,0,0,0" VerticalAlignment="Top" Width="472" Orientation="Vertical" Background="#292929" Height="1280"/>
        <StackPanel HorizontalAlignment="Left" Height="120" Margin="0,0,0,0" VerticalAlignment="Bottom" Width="1320" Background="#292929" Orientation="Horizontal" >
            <Button x:Name ="callServer" Content="Call a Server" Margin="20,20,20,20" HorizontalAlignment="Left" VerticalAlignment="Center" Width="360" Height="80" Background="#e01a31" Foreground="WhiteSmoke" FontSize="36" FontFamily="Arial"/>
            <Label Content="Legend: " Foreground="WhiteSmoke" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="48" Margin="200,20,20,20" FontWeight="Bold" FontFamily="Euphemia"/>
            <Image Width="60" Height="60" Source="img/vegetarian.jpg"/>
        </StackPanel>
    </Grid>
</Page>
