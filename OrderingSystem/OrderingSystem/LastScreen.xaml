<Page x:Class="OrderingSystem.LastScreen"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:OrderingSystem"
      mc:Ignorable="d" 
      d:DesignHeight="1280" d:DesignWidth="1800"
      Title="LastScreen" Background="White">

    <Grid>
        <Frame x:Name="NavigationFrame3" NavigationUIVisibility="Hidden"/>
        <ToggleButton x:Name="CallServer" Content="Call a Server" Height="80" Margin="230,900,0,0" Width="360" Background="#e01a31" Foreground="WhiteSmoke" FontSize="36" FontFamily="Arial" HorizontalAlignment="Left" VerticalAlignment="Center" Click="CallServer_Click"/>
        <Button x:Name="ContinueBrowsing" Content="Continue Browsing" Height="80" Margin="720,900,0,0" Width="360" Background="#e01a31" Foreground="WhiteSmoke" FontSize="36" FontFamily="Arial" HorizontalAlignment="Left" VerticalAlignment="Center"/>
        <ToggleButton x:Name="FinishPay" Content="Finish and Pay" HorizontalAlignment="Left" Height="80" Margin="1210,900,0,0" Width="360" VerticalAlignment="Center" Background="#e01a31" Foreground="WhiteSmoke" FontSize="36" FontFamily="Arial"/>
        <Image Name="smileyface" HorizontalAlignment="Left" Height="400" Margin="700,400,0,0" VerticalAlignment="Top" Width="400" Source="img/smileyface.jpg"/>
        <Label Name ="Thanks" Content="Thanks For Ordering!" Margin="330,110,340,1050" FontSize="100" Foreground="#e01a31" FontFamily="/fonts/#Americana" HorizontalAlignment="Center" VerticalAlignment="Center" Width="1150"/>
        <Label Name ="Order" Content="Your food will be here shorty" HorizontalAlignment="Center" Margin="120,240,120,920" VerticalAlignment="Center" FontSize="48" Foreground="#e01a31" FontFamily="/fonts/#Americana" Width="760"/>
        <Popup x:Name="PopUpServer" Width="400" Height="400" Margin="0,0,0,100" IsOpen="{Binding ElementName=CallServer, Path=IsChecked, Mode=TwoWay}" PlacementTarget="{Binding ElementName=CallServer}" StaysOpen="False" IsHitTestVisible="False" PopupAnimation="Fade" AllowsTransparency="True">
            <Canvas Width="360" Height="300" Background="LightBlue" VerticalAlignment="Bottom">
                <Canvas.RenderTransform>
                    <RotateTransform x:Name="Transform1" />
                </Canvas.RenderTransform>
                <TextBlock Foreground="Black" FontSize="42" FontFamily="Arial" VerticalAlignment="Center" Text="Help is on the way! You can continue browsing by clicking the 'Menu' button" TextWrapping="Wrap" Height="300" Width="360" TextAlignment="Center">
                </TextBlock>
            </Canvas>
        </Popup>
        <Popup x:Name="PopUpFinishPay" Width="400" Height="400" Margin="0,0,0,200" IsOpen="{Binding ElementName=FinishPay, Path=IsChecked, Mode=TwoWay}" PlacementTarget="{Binding ElementName=FinishPay}" StaysOpen="False" IsHitTestVisible="False" PopupAnimation="Fade" AllowsTransparency="True">
            <Canvas Width="360" Height="300" Background="LightBlue" VerticalAlignment="Bottom">
                <Canvas.RenderTransform>
                    <RotateTransform x:Name="Transform2" />
                </Canvas.RenderTransform>
                <TextBlock Foreground="Black" FontSize="42" FontFamily="Arial" VerticalAlignment="Center" Text="Thank You!
                           Please proceed to the front to Pay" TextWrapping="Wrap" Height="300" Width="360" TextAlignment="Center">
                </TextBlock>
            </Canvas>
        </Popup>
    </Grid>
</Page>
